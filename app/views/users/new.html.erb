<h1>Sign up</h1>



<%= form_for(@user) do |f| %>
<div class="col-sm-4 col-sm-offset-4 well">

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit "Sign up", class: "btn btn-primary" %>
  
</div>
<% end %>